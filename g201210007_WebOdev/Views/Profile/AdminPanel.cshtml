        @*kahve ekleme*@
        <div class="album py-5 bg-light" style="border-radius:0px;">
            <div class="container" >
                <div>
                    <h5>Bu alandan kahve ekleyebilirsiniz.</h5>
                </div>
                <div class="row" >
                    <form asp-action="AdminCoffeeAdd" asp-controller="Profile" method="post">
                    
                    <table class="table">
                    <thead>
                    <tr>
                    <th scope="col">Kahve İsmi</th>
                    <th scope="col">Kahve Markası</th>
                    <th scope="col">Tadım Notları</th>
                    <th scope="col">Kahve Fotoğrafı</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                    <th scope="row">
                        <input type="text" name="Name" class="form-control form-control-lg" />
                    </th>
                    <td>
                        <input type="text" name="Brand" class="form-control form-control-lg" />
                    </td>
                    <td>
                        <input type="text" name="Taste" class="form-control form-control-lg" />
                    </td>
                    <td>
                        <input type="text" name="Image" class="form-control form-control-lg" />
                    </td>

                    </tr>
                    
                    </tbody>
                    </table> 
                        <div class="row mx-sm-3 mb-2">
                            <div class="col-4">
                                <button class="btn btn-primary col-4">Kaydet</button>
                            </div>    
                        </div>
                        
                    </form>


                </div>
            </div>
        </div>


       
        @*yorum silme*@
        <div class="album py-5 bg-light" style="border-radius:0px;">
            <div class="container">
                <div>
                    <h5>Bu alandan herhangi bir kullanıcıdan gelmiş herhangi bir yorumu silebilirsiniz.</h5>
                </div>
                <div class="row">

                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col"> id</th>
                                <th scope="col">Coffee Name</th>
                                <th scope="col">Coffee Comment ID</th>
                                <th scope="col">Coffee Comment</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model as List<Coffee>)
                        {
                            if (item.Comments != null && Model != null)
                            {
                                int comId = 0;
                                foreach (var com in item.Comments)
                                {
                                    
                                        <tbody>
                                            <tr>
                                                <th scope="row">@item.Id</th>
                                                <td>@item.Name</td>
                                                <td>@comId</td>
                                                <td>@com</td>
                                            </tr>
                                        </tbody>
                                    
                                    comId += 1;
                                }
                            }

                        }
                    </table>
                    <form asp-action="deleteComment" asp-controller="Profile" method="post">
                        <div class="row mx-sm-3 mb-2">
                            <div class="col-4">
                                <input type="text" name="Id" class="form-control form-control-lg col-8" placeholder="Silmek istediğiniz yorumun Kahve Id'siini giriniz." />
                            </div>
                            <div class="col-4">
                                <input type="text" name="comId" class="form-control form-control-lg col-8" placeholder="Silmek istediğiniz yorumun Id'siini giriniz." />
                            </div>
                            <div class="col-4">
                                <button class="btn btn-primary col-4">Sil</button>
                            </div>
                        </div>

                    </form>

                </div>
            </div>
        </div>
        
