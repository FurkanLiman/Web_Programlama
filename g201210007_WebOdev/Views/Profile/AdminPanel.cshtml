                    <th scope="col">Coffee Name</th>
                    <th scope="col">Coffee Brand</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.Brand</td>

                    </tr>
                    }
                    </tbody>
                    </table> 
                    <form asp-action="AdminPanel" asp-controller="Profile" method="post">
                        <div class="row mx-sm-3 mb-2">
                            <div class="col-8">
                                <input type="text" name="Id" class="form-control form-control-lg col-8" placeholder="Silmek istediğiniz kahvenin Id'sini giriniz." />
                            </div>
                            <div class="col-4">
                                <button class="btn btn-primary col-4">Sil</button>
                            </div>    
                        </div>
                        
                    </form>


                </div>
            </div>
        </div>


